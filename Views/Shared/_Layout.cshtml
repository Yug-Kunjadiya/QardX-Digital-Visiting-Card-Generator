<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QardX</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-0">
            <div class="container-fluid" style="max-width: 93%;">
                <a class="navbar-brand fw-bold text-primary fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                            <i class="fas fa-id-card"></i>
                        </div>
                        <span>QardX</span>
                        <small class="text-muted ms-2 d-none d-md-inline">Digital Cards</small>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Card" asp-action="Index">My Cards</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Card" asp-action="Create">Create Card</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Analytics" asp-action="Dashboard">
                                    <i class="fas fa-chart-line me-1"></i>Analytics
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Card" asp-action="Index">
                                        <i class="fas fa-id-card me-2"></i>My Cards
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Batch" asp-action="Index">
                                        <i class="fas fa-layer-group me-2"></i>Batch QR Codes
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="TemplateBuilder" asp-action="Builder">
                                        <i class="fas fa-paint-brush me-2"></i>Template Builder
                                    </a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header">Admin</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ContactSubmissions">
                                            <i class="fas fa-envelope me-2"></i>Contact Forms
                                        </a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            @* Check if admin is authenticated *@
                            @if (Context.Session.GetString("IsAdminAuthenticated") == "true")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-shield-alt me-1"></i>Admin Panel
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Admin")">
                                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Users", "Admin")">
                                            <i class="fas fa-users me-2"></i>Users
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Templates", "Admin")">
                                            <i class="fas fa-palette me-2"></i>Templates
                                        </a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Analytics", "Admin")">
                                            <i class="fas fa-chart-bar me-2"></i>Analytics
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Admin")">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                                @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
                                {
                                    <li class="nav-item">
                                        <button class="btn btn-outline-danger btn-sm ms-2" onclick="showAdminPasswordModal()">
                                            <i class="fas fa-shield-alt me-1"></i>Admin
                                        </button>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - QardX - Digital Visiting Card Generator
            <br>
            <small class="text-muted">Powered by <strong>YUG KUNJADIYA</strong></small>
        </div>
    </footer>
    <!-- Admin Password Modal -->
    <div class="modal fade" id="adminPasswordModal" tabindex="-1" aria-labelledby="adminPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="adminPasswordModalLabel">
                        <i class="fas fa-shield-alt me-2"></i>Admin Access
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-lock fa-3x text-danger mb-3"></i>
                        <p class="text-muted">Enter the admin password to access the admin panel</p>
                    </div>
                    <form id="adminPasswordForm">
                        <div class="mb-3">
                            <label for="adminPassword" class="form-label">Admin Password</label>
                            <input type="password" class="form-control" id="adminPassword" placeholder="Enter admin password" required>
                        </div>
                        <div id="adminError" class="alert alert-danger d-none">
                            <i class="fas fa-exclamation-triangle me-2"></i>Invalid password. Please try again.
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="verifyAdminPassword()">
                        <i class="fas fa-sign-in-alt me-1"></i>Access Admin Panel
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function showAdminPasswordModal() {
            document.getElementById('adminPassword').value = '';
            document.getElementById('adminError').classList.add('d-none');
            var modal = new bootstrap.Modal(document.getElementById('adminPasswordModal'));
            modal.show();
        }

        function verifyAdminPassword() {
            var password = document.getElementById('adminPassword').value;
            
            if (!password) {
                document.getElementById('adminError').textContent = 'Please enter a password.';
                document.getElementById('adminError').classList.remove('d-none');
                return;
            }

            // Send password to server for verification
            fetch('/Admin/VerifyPassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: JSON.stringify({ password: password })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Close modal and redirect to admin panel
                    bootstrap.Modal.getInstance(document.getElementById('adminPasswordModal')).hide();
                    window.location.href = '/Admin';
                } else {
                    document.getElementById('adminError').textContent = 'Invalid password. Please try again.';
                    document.getElementById('adminError').classList.remove('d-none');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                document.getElementById('adminError').textContent = 'An error occurred. Please try again.';
                document.getElementById('adminError').classList.remove('d-none');
            });
        }

        // Allow Enter key to submit password
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('adminPassword').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    verifyAdminPassword();
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section text-center">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-6 text-lg-start">
                <h1 class="display-3 fw-bold mb-4">
                    <i class="fas fa-id-card me-3"></i> Welcome to QardX
                </h1>
                <p class="lead mb-4 fs-5">Create stunning digital visiting cards in minutes with QR codes and multiple export options</p>
                
                @if (!User.Identity!.IsAuthenticated)
                {
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-lg-start justify-content-center mb-4">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-cta btn-lg">
                            <i class="fas fa-rocket me-2"></i>Start Creating Free
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-lg-start justify-content-center">
                        <a asp-controller="Card" asp-action="Create" class="btn btn-cta btn-lg">
                            <i class="fas fa-plus me-2"></i>Create New Card
                        </a>
                        <a asp-controller="Card" asp-action="Index" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-id-card me-2"></i>My Cards
                        </a>
                    </div>
                }
            </div>
            
            <div class="col-lg-6 mt-5 mt-lg-0">
                <!-- Hero illustration -->
                <div class="glass-card p-4">
                    <div class="minimal-white-template p-3 mx-auto" style="max-width: 300px;">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-dark mb-1">John Doe</h6>
                                <p class="text-muted small mb-2">Senior Developer</p>
                                <small class="text-dark">
                                    <i class="fas fa-envelope me-1 text-primary"></i>john@company.com<br>
                                    <i class="fas fa-phone me-1 text-primary"></i>(555) 123-4567
                                </small>
                            </div>
                            <div class="bg-primary p-2 rounded" style="width: 50px; height: 50px;">
                                <i class="fas fa-qrcode text-white" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-light"><i class="fas fa-magic me-1"></i>Live Preview Demo</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section">
<div class="container">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-6 fw-bold text-primary mb-3">Why Choose QardX?</h2>
            <p class="lead text-muted">Everything you need to create professional digital visiting cards</p>
        </div>
    </div>
    
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card feature-card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-qrcode fa-2x"></i>
                    </div>
                    <h4 class="card-title text-primary">QR Code Integration</h4>
                    <p class="card-text text-muted">Each visiting card includes a QR code with vCard data for easy contact sharing and saving.</p>
                    <div class="mt-3">
                        <span class="badge bg-primary-subtle text-primary rounded-pill">vCard Format</span>
                        <span class="badge bg-primary-subtle text-primary rounded-pill">Instant Save</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card feature-card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-palette fa-2x"></i>
                    </div>
                    <h4 class="card-title text-primary">Multiple Templates</h4>
                    <p class="card-text text-muted">Choose from professional templates including Classic Blue, Minimal White, and Modern Dark designs.</p>
                    <div class="mt-3">
                        <span class="badge bg-success-subtle text-success rounded-pill">Live Preview</span>
                        <span class="badge bg-success-subtle text-success rounded-pill">Mobile Ready</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card feature-card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-download fa-2x"></i>
                    </div>
                    <h4 class="card-title text-primary">Export Options</h4>
                    <p class="card-text text-muted">Download your visiting cards as high-quality PDF or PNG files for printing or digital sharing.</p>
                    <div class="mt-3">
                        <span class="badge bg-info-subtle text-info rounded-pill">PDF Ready</span>
                        <span class="badge bg-info-subtle text-info rounded-pill">High Quality</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works Section -->
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-6 fw-bold text-primary mb-5">How It Works</h2>
        </div>
    </div>
    
    <div class="row g-4 mb-5">
        <div class="col-md-3 text-center">
            <div class="progress-step">
                <span class="fw-bold">1</span>
            </div>
            <div class="feature-icon mb-3" style="width: 60px; height: 60px;">
                <i class="fas fa-user-plus fa-lg"></i>
            </div>
            <h5 class="text-primary">Register</h5>
            <p class="text-muted">Create your account with basic information</p>
        </div>
        
        <div class="col-md-3 text-center">
            <div class="progress-step">
                <span class="fw-bold">2</span>
            </div>
            <div class="feature-icon mb-3" style="width: 60px; height: 60px;">
                <i class="fas fa-edit fa-lg"></i>
            </div>
            <h5 class="text-primary">Enter Details</h5>
            <p class="text-muted">Add your professional information and contact details</p>
        </div>
        
        <div class="col-md-3 text-center">
            <div class="progress-step">
                <span class="fw-bold">3</span>
            </div>
            <div class="feature-icon mb-3" style="width: 60px; height: 60px;">
                <i class="fas fa-paint-brush fa-lg"></i>
            </div>
            <h5 class="text-primary">Choose Template</h5>
            <p class="text-muted">Select from our professional template designs</p>
        </div>
        
        <div class="col-md-3 text-center">
            <div class="progress-step">
                <span class="fw-bold">4</span>
            </div>
            <div class="feature-icon mb-3" style="width: 60px; height: 60px;">
                <i class="fas fa-rocket fa-lg"></i>
            </div>
            <h5 class="text-primary">Export & Share</h5>
            <p class="text-muted">Download as PDF/PNG and share digitally</p>
        </div>
    </div>

    @if (!User.Identity!.IsAuthenticated)
    {
        <!-- Call to Action -->
        <div class="row">
            <div class="col-12 text-center">
                <div class="glass-card p-5">
                    <h3 class="fw-bold text-primary mb-3">Ready to Get Started?</h3>
                    <p class="lead mb-4 text-muted">Join thousands of professionals creating stunning digital cards</p>
                    
                    <a asp-controller="Account" asp-action="Register" class="btn btn-cta btn-lg px-5">
                        <i class="fas fa-rocket me-2"></i>Create Your Card Free
                    </a>
                    
                    <p class="mt-3 mb-0">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>Setup takes less than 2 minutes
                        </small>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
</div>
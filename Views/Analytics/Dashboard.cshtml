@model AnalyticsDashboardViewModel
@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-chart-line text-primary me-2"></i>Analytics Dashboard
                    </h2>
                    <p class="text-muted mb-0">Track your visiting card performance and engagement</p>
                </div>
                <div class="text-end">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Last updated: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-id-card text-primary fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Total Cards</div>
                            <div class="fs-4 fw-bold">@Model.TotalCards</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-eye text-success fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Total Views</div>
                            <div class="fs-4 fw-bold">@Model.TotalViews</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-calendar-day text-info fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Views Today</div>
                            <div class="fs-4 fw-bold">@Model.ViewsToday</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="fas fa-calendar-week text-warning fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="text-muted small">Views This Week</div>
                            <div class="fs-4 fw-bold">@Model.ViewsThisWeek</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Card Performance -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pb-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar text-primary me-2"></i>Card Performance
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.CardAnalytics.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Card</th>
                                        <th>Views</th>
                                        <th>Last Viewed</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var card in Model.CardAnalytics)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <div class="fw-semibold">@card.CardName</div>
                                                    <small class="text-muted">@card.Company</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary rounded-pill">@card.ViewCount</span>
                                            </td>
                                            <td>
                                                @if (card.LastViewed.HasValue)
                                                {
                                                    <small class="text-muted">@card.LastViewed.Value.ToString("MMM dd, HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Never</small>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Analytics", new { id = card.CardId })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-chart-line me-1"></i>Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No analytics data yet</h5>
                            <p class="text-muted">Share your cards to start tracking views and engagement.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Breakdown Stats -->
        <div class="col-lg-4">
            <div class="row">
                <!-- Top Countries -->
                <div class="col-12 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-transparent border-0 pb-0">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-globe text-success me-2"></i>Top Countries
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.TopCountries.Any())
                            {
                                @foreach (var country in Model.TopCountries.Take(5))
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="small">@country.Country</span>
                                        <span class="badge bg-success rounded-pill">@country.Count</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-3">
                                    <small class="text-muted">No data available</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Top Devices -->
                <div class="col-12 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-transparent border-0 pb-0">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-mobile-alt text-info me-2"></i>Top Devices
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.TopDevices.Any())
                            {
                                @foreach (var device in Model.TopDevices.Take(5))
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="small">@device.DeviceType</span>
                                        <span class="badge bg-info rounded-pill">@device.Count</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-3">
                                    <small class="text-muted">No data available</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Top Browsers -->
                <div class="col-12">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-transparent border-0 pb-0">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-browser text-warning me-2"></i>Top Browsers
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (Model.TopBrowsers.Any())
                            {
                                @foreach (var browser in Model.TopBrowsers.Take(5))
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="small">@browser.Browser</span>
                                        <span class="badge bg-warning rounded-pill">@browser.Count</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-3">
                                    <small class="text-muted">No data available</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}
@model AdminAnalyticsViewModel
@{
    ViewData["Title"] = "Admin Analytics";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-chart-bar me-2"></i>Analytics Dashboard</h2>
                <div class="d-flex align-items-center">
                    <div class="text-muted me-3">
                        <i class="fas fa-clock me-1"></i>@DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                    </div>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary btn-sm me-2">
                        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                    </a>
                    <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Analytics Cards -->
    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-3">
            <div class="card border-start border-primary border-4 shadow h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Views</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalViews</div>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-eye fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-3">
            <div class="card border-start border-success border-4 shadow h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">Active Cards</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalCards</div>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-id-card fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-3">
            <div class="card border-start border-info border-4 shadow h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">Registered Users</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalUsers</div>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-users fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Views -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 fw-bold text-primary"><i class="fas fa-clock me-2"></i>Recent Card Views</h6>
                </div>
                <div class="card-body">
                    @if (Model.RecentViews != null && Model.RecentViews.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Card Owner</th>
                                        <th>Card ID</th>
                                        <th>Viewer Location</th>
                                        <th>Device</th>
                                        <th>Viewed At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var view in Model.RecentViews)
                                    {
                                        <tr>
                                            <td>@view.VisitingCard?.User?.FullName</td>
                                            <td>@view.CardId</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(view.City) && !string.IsNullOrEmpty(view.Country))
                                                {
                                                    <span class="badge bg-secondary">@view.City, @view.Country</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(view.DeviceType))
                                                {
                                                    <span class="badge bg-info">@view.DeviceType</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown</span>
                                                }
                                            </td>
                                            <td>@view.ViewedAt.ToString("MMM dd, HH:mm")</td>
                                            <td>
                                                <a href="@Url.Action("ViewCard", "PublicView", new { id = view.CardId })" 
                                                   class="btn btn-sm btn-outline-primary" target="_blank">
                                                    <i class="fas fa-eye"></i> View Card
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-chart-bar fa-3x mb-3"></i>
                            <p>No recent views found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
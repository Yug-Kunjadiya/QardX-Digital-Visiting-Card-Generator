@model VisitingCardViewModel
@{
    ViewData["Title"] = "Preview Visiting Card";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4>Visiting Card Preview</h4>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.CardId" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <button class="btn btn-success btn-sm" onclick="exportAsPDF(@Model.CardId)">
                        <i class="fas fa-file-pdf"></i> Export PDF
                    </button>
                    <button class="btn btn-info btn-sm" onclick="exportAsPNG(@Model.CardId)">
                        <i class="fas fa-image"></i> Export PNG
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div id="visitingCard" class="visiting-card @GetTemplateClass(Model.TemplateName)">
                            @if (Model.TemplateName == "Classic Blue")
                            {
                                <div class="classic-blue-template p-4">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h3 class="text-white mb-1">@Model.FirstName @Model.LastName</h3>
                                            @if (!string.IsNullOrEmpty(Model.JobTitle))
                                            {
                                                <h6 class="text-white-50 mb-1">@Model.JobTitle</h6>
                                            }
                                            <h6 class="text-white-50 mb-3">@Model.Company</h6>
                                            <div class="text-white">
                                                <div class="mb-2">
                                                    <i class="fas fa-envelope me-2"></i>
                                                    <span>@Model.Email</span>
                                                </div>
                                                <div class="mb-2">
                                                    <i class="fas fa-phone me-2"></i>
                                                    <span>@Model.Phone</span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.LinkedIn))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-linkedin me-2"></i>
                                                        <span>@Model.LinkedIn</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Instagram))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-instagram me-2"></i>
                                                        <span>@Model.Instagram</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Twitter))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-twitter me-2"></i>
                                                        <span>@Model.Twitter</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Facebook))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-facebook me-2"></i>
                                                        <span>@Model.Facebook</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Website))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fas fa-globe me-2"></i>
                                                        <span>@Model.Website</span>
                                                    </div>
                                                }
                                                <div>
                                                    <i class="fas fa-map-marker-alt me-2"></i>
                                                    <span>@Model.Address</span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.Skills))
                                                {
                                                    <div class="mt-2">
                                                        <i class="fas fa-tools me-2"></i>
                                                        <small>@Model.Skills</small>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Languages))
                                                {
                                                    <div class="mt-1">
                                                        <i class="fas fa-language me-2"></i>
                                                        <small>@Model.Languages</small>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.AvailabilityStatus))
                                                {
                                                    <div class="mt-1">
                                                        <i class="fas fa-check-circle me-2"></i>
                                                        <small>@Model.AvailabilityStatus</small>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="qr-code">
                                            <img src="@Url.Action("GetQRCode", new { id = Model.CardId })" alt="QR Code" class="img-fluid" style="max-width: 80px;" />
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (Model.TemplateName == "Minimal White")
                            {
                                <div class="minimal-white-template p-4">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h3 class="text-dark mb-1">@Model.FirstName @Model.LastName</h3>
                                            @if (!string.IsNullOrEmpty(Model.JobTitle))
                                            {
                                                <h6 class="text-muted mb-1">@Model.JobTitle</h6>
                                            }
                                            <h6 class="text-muted mb-3">@Model.Company</h6>
                                            <div class="text-dark">
                                                <div class="mb-2">
                                                    <i class="fas fa-envelope me-2 text-primary"></i>
                                                    <span>@Model.Email</span>
                                                </div>
                                                <div class="mb-2">
                                                    <i class="fas fa-phone me-2 text-primary"></i>
                                                    <span>@Model.Phone</span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.LinkedIn))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-linkedin me-2 text-primary"></i>
                                                        <span>@Model.LinkedIn</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Instagram))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-instagram me-2 text-primary"></i>
                                                        <span>@Model.Instagram</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Twitter))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-twitter me-2 text-primary"></i>
                                                        <span>@Model.Twitter</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Facebook))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-facebook me-2 text-primary"></i>
                                                        <span>@Model.Facebook</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Website))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fas fa-globe me-2 text-primary"></i>
                                                        <span>@Model.Website</span>
                                                    </div>
                                                }
                                                <div>
                                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                                    <span>@Model.Address</span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.Skills))
                                                {
                                                    <div class="mt-2">
                                                        <i class="fas fa-tools me-2 text-primary"></i>
                                                        <small>@Model.Skills</small>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Languages))
                                                {
                                                    <div class="mt-1">
                                                        <i class="fas fa-language me-2 text-primary"></i>
                                                        <small>@Model.Languages</small>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.AvailabilityStatus))
                                                {
                                                    <div class="mt-1">
                                                        <i class="fas fa-check-circle me-2 text-primary"></i>
                                                        <small>@Model.AvailabilityStatus</small>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="qr-code">
                                            <img src="@Url.Action("GetQRCode", new { id = Model.CardId })" alt="QR Code" class="img-fluid" style="max-width: 80px;" />
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (Model.TemplateName == "Modern Dark")
                            {
                                <div class="modern-dark-template p-4">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h3 class="text-warning mb-1">@Model.FirstName @Model.LastName</h3>
                                            @if (!string.IsNullOrEmpty(Model.JobTitle))
                                            {
                                                <h6 class="text-light mb-1">@Model.JobTitle</h6>
                                            }
                                            <h6 class="text-light mb-3">@Model.Company</h6>
                                            <div class="text-light">
                                                <div class="mb-2">
                                                    <i class="fas fa-envelope me-2 text-warning"></i>
                                                    <span>@Model.Email</span>
                                                </div>
                                                <div class="mb-2">
                                                    <i class="fas fa-phone me-2 text-warning"></i>
                                                    <span>@Model.Phone</span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.LinkedIn))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-linkedin me-2 text-warning"></i>
                                                        <span>@Model.LinkedIn</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Instagram))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-instagram me-2 text-warning"></i>
                                                        <span>@Model.Instagram</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Twitter))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-twitter me-2 text-warning"></i>
                                                        <span>@Model.Twitter</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Facebook))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fab fa-facebook me-2 text-warning"></i>
                                                        <span>@Model.Facebook</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Website))
                                                {
                                                    <div class="mb-2">
                                                        <i class="fas fa-globe me-2 text-warning"></i>
                                                        <span>@Model.Website</span>
                                                    </div>
                                                }
                                                <div>
                                                    <i class="fas fa-map-marker-alt me-2 text-warning"></i>
                                                    <span>@Model.Address</span>
                                                </div>
                                                @if (!string.IsNullOrEmpty(Model.Skills))
                                                {
                                                    <div class="mt-2">
                                                        <i class="fas fa-tools me-2 text-warning"></i>
                                                        <small>@Model.Skills</small>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.Languages))
                                                {
                                                    <div class="mt-1">
                                                        <i class="fas fa-language me-2 text-warning"></i>
                                                        <small>@Model.Languages</small>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(Model.AvailabilityStatus))
                                                {
                                                    <div class="mt-1">
                                                        <i class="fas fa-check-circle me-2 text-warning"></i>
                                                        <small>@Model.AvailabilityStatus</small>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="qr-code">
                                            <img src="@Url.Action("GetQRCode", new { id = Model.CardId })" alt="QR Code" class="img-fluid" style="max-width: 80px;" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">QR Code</h6>
                            </div>
                            <div class="card-body text-center">
                                <img src="@Url.Action("GetQRCode", new { id = Model.CardId })" alt="QR Code" class="img-fluid mb-3" />
                                <p class="small text-muted">Scan to save contact information</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">Template: @Model.TemplateName</small>
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to Cards</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportAsPDF(cardId) {
            window.open(`/Export/PDF/${cardId}`, '_blank');
        }
        
        function exportAsPNG(cardId) {
            window.open(`/Export/PNG/${cardId}`, '_blank');
        }
    </script>
}

@functions {
    private string GetTemplateClass(string? templateName)
    {
        return templateName?.ToLower().Replace(" ", "-") ?? "default";
    }
}
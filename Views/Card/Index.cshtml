@model IEnumerable<VisitingCard>
@{
    ViewData["Title"] = "My Visiting Cards";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Visiting Cards</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Card
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var card in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="card-title mb-0">@card.Template.TemplateName</h5>
                        <small class="text-muted">Created: @card.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <strong>Company:</strong> @card.Company <br>
                            <strong>Phone:</strong> @card.Phone <br>
                            @if (!string.IsNullOrEmpty(card.LinkedIn))
                            {
                                <strong>LinkedIn:</strong> @card.LinkedIn <br>
                            }
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100 mb-2" role="group">
                            <a asp-action="Preview" asp-route-id="@card.CardId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Preview
                            </a>
                            <a asp-action="Edit" asp-route-id="@card.CardId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button class="btn btn-outline-danger btn-sm" onclick="deleteCard(@card.CardId)">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                        <div class="btn-group w-100" role="group">
                            <button class="btn btn-outline-info btn-sm" onclick="getEmbedCode(@card.CardId)">
                                <i class="fas fa-code"></i> Embed Form
                            </button>
                            <a href="/Contact/Embed/@card.CardId" class="btn btn-outline-success btn-sm" target="_blank">
                                <i class="fas fa-external-link-alt"></i> Contact Page
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-id-card fa-3x text-muted mb-3"></i>
        <h4>No visiting cards yet</h4>
        <p class="text-muted">Create your first digital visiting card to get started.</p>
        <a asp-action="Create" class="btn btn-primary">Create Your First Card</a>
    </div>
}

<!-- Embed Code Modal -->
<div class="modal fade" id="embedModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contact Form Embed Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted mb-3">Copy and paste this code into your website to embed the contact form:</p>
                <div class="position-relative">
                    <textarea id="embedCode" class="form-control" rows="10" readonly></textarea>
                    <button class="btn btn-outline-primary btn-sm position-absolute top-0 end-0 m-2" onclick="copyEmbedCode()">
                        <i class="fas fa-copy"></i> Copy
                    </button>
                </div>
                <div class="alert alert-info mt-3">
                    <strong>Note:</strong> This embed code will display a contact form that captures leads directly to your QardX dashboard.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCard(cardId) {
            if (confirm('Are you sure you want to delete this card?')) {
                fetch(`/Card/Delete/${cardId}`, {
                    method: 'DELETE',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                }).then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Error deleting card.');
                    }
                });
            }
        }

        function getEmbedCode(cardId) {
            fetch(`/Contact/GetEmbedCode?cardId=${cardId}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('embedCode').value = data.embedCode;
                    new bootstrap.Modal(document.getElementById('embedModal')).show();
                })
                .catch(error => {
                    alert('Error getting embed code');
                });
        }

        function copyEmbedCode() {
            const embedCode = document.getElementById('embedCode');
            embedCode.select();
            document.execCommand('copy');
            
            // Show success message
            const button = event.target.closest('button');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i> Copied!';
            button.classList.remove('btn-outline-primary');
            button.classList.add('btn-success');
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-primary');
            }, 2000);
        }
    </script>
}
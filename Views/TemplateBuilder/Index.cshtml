@{
    ViewData["Title"] = "Custom Templates";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-palette me-2"></i>Custom Templates</h4>
                    <a href="/TemplateBuilder/Builder" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create New Template
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Manage your custom visiting card templates here. Create, edit, and organize your designs.
                    </div>
                    
                    <div class="text-center py-5">
                        <i class="fas fa-templates fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No Custom Templates Yet</h5>
                        <p class="text-muted">Click "Create New Template" to get started with your first custom design</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>